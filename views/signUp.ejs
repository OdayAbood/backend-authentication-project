<%- include('./prtials/head.ejs') %>
<body>
    <%- include('./prtials/Link.ejs') %>
    <form >
        <label for="firstname"> First Name</label>
        <input type="text" name="firstname" id="firstname">
        <div class="firstname error"></div>
        <label for="lastname">Last Name</label>
        <input type="text" name="lastname" id="lastname">
        <div class="lastname error"></div>
        <label for="email">Email</label>
        <input type="text" name="email" id="email">
        <div class="email error"></div>
        <label for="password">Password</label>
        <input type="password" name="password" id="password">
        <div class="password error"></div>
        <input type="submit" class="submit" value="SignUp">
    </form>
    <script>
        let mysubmit = document.querySelector(".submit");
        const form = document.querySelector("form");
        

        form.addEventListener("submit" , async (e)=>{
            
                    const firstname = form.firstname.value ;
                    const lastname = form.lastname.value ;
                    const email = form.email.value ;
                    const password = form.password.value ;
                    const info = {firstname , lastname , email , password};
                    const emailer = document.querySelector(".email.error")
                    const firstnameer = document.querySelector(".firstname.error")
                    const lastnameer = document.querySelector(".lastname.error")
                    const passworder = document.querySelector(".password.error")
                    emailer.innerHTML = " ";
                    passworder.innerHTML = " ";
                    firstnameer.innerHTML = " ";
                    lastnameer.innerHTML = " ";
                    
            e.preventDefault();
            try{
                const res = await fetch("/signup" , {
                    method:"post",
                    body:JSON.stringify(info),
                    headers:{'Content-Type' : 'application/json '}
                })
                const data = await res.json();
                if(data.emailExist) emailer.innerHTML = data.emailExist;
                if(data.eror){
                    emailer.innerHTML = data.email;
                    passworder.innerHTML = data.password;
                    lastnameer.innerHTML = data.lastname;
                    firstnameer.innerHTML = data.firstname;
                }
                if(data.redirect)
                location.assign(data.redirect)
            }
            catch(err){
                console.log("we have some erroe herre : ",err.message)
            }
        })
    </script>
</body>